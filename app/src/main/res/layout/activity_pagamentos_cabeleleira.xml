<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitysCabeleleira.PagamentosCabeleleira">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="142dp"
        android:layout_height="158dp"
        android:src="@drawable/cortedecabelo"
        android:layout_centerHorizontal="true"></ImageView>

    <ImageView
        android:id="@+id/iconBack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/Logo"
        android:layout_alignBottom="@+id/Logo"
        android:layout_marginLeft="-132dp"
        android:layout_marginBottom="49dp"
        android:clickable="true"
        android:src="@drawable/baseline_arrow_back_24"></ImageView>

    <TextView
        android:id="@+id/lblMarcação"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="124dp"
        android:fontFamily="@font/poppinsbold"
        android:text="MARCAÇÃO"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"></TextView>

    <LinearLayout
        android:id="@+id/etiquetaFase"
        android:layout_width="363dp"
        android:layout_height="53dp"
        android:background="@color/roxo"
        android:gravity="center"
        android:layout_below="@+id/lblMarcação"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="BARBEIRO"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp">

        </TextView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/stepProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_below="@+id/etiquetaFase"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="50dp"
                android:src="@drawable/blue_circle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/black"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="52dp"
                android:layout_height="50dp"
                android:src="@drawable/blue_circle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/black"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="50dp"
                android:src="@drawable/blue_circle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/black"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="50dp"
                android:src="@drawable/blue_circle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@color/black"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="50dp"
                android:src="@drawable/gray_circle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textStyle="bold"
                android:textSize="20sp"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/stepProgressBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginTop="20dp">


            <Button
                android:id="@+id/btnMpesa"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:text="M-PESA"
                android:textSize="24sp"
                android:fontFamily="@font/poppinsbold"
                android:backgroundTint="@color/vermelho"
                android:drawableLeft="@drawable/iconmpesa"
                android:paddingRight="110dp"></Button>

            <Button
                android:id="@+id/btnEmola"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:text="EMOLA"
                android:textSize="24sp"
                android:fontFamily="@font/poppinsbold"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/laranja"
                android:drawableLeft="@drawable/iconemola"
                android:paddingRight="110dp">
            </Button>

            <Button
                android:id="@+id/btnMkesh"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:text="MKESH"
                android:textSize="24sp"
                android:fontFamily="@font/poppinsbold"
                android:backgroundTint="@color/amarelo"
                android:drawableLeft="@drawable/iconmkesh"
                android:paddingRight="110dp"></Button>

            <Button
                android:id="@+id/btnContamovel"
                android:layout_width="340dp"
                android:layout_height="115dp"
                android:text="CONTA MOVÉL"
                android:textSize="24sp"
                android:fontFamily="@font/poppinsbold"
                android:backgroundTint="@color/azul"
                android:layout_marginTop="10dp"></Button>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>