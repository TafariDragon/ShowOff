<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="182dp"
        android:layout_height="202dp"
        android:src="@drawable/cortedecabelo"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"></ImageView>
    <TextView
        android:id="@+id/lblShowoff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SHOW-OFF"
        android:textSize="36sp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:fontFamily="@font/poppinslight"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imgIcon">
    </TextView>

    <TextView
        android:id="@+id/lblEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENTRAR"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:textSize="24sp"
        android:layout_below="@+id/lblShowoff"
        android:layout_marginTop="50dp">
    </TextView>

    <ScrollView
        android:id="@+id/scrollEntrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblEntrar"
        android:layout_marginTop="20dp">
    <LinearLayout
        android:id="@+id/ContainercamposLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblEntrar"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <EditText
            android:id="@+id/txtLoginContactoUtilizador"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Contacto do utlizador"
            android:fontFamily="@font/poppinslight"
            android:textSize="16sp"
            android:inputType="phone">
        </EditText>

        <EditText
            android:id="@+id/txtSenhaLoginContactoUtilizador"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Senha do utlizador"
            android:fontFamily="@font/poppinslight"
            android:layout_marginTop="24dp"
            android:textSize="16sp"
            android:inputType="textPassword">
        </EditText>

        <Button
            android:id="@+id/btnEntrar"
            android:layout_width="172dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/roxo"
            android:layout_marginTop="10dp"
            android:text="ENTRAR"
            android:textSize="16sp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="172dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/verde"
            android:layout_marginTop="8dp"
            android:text="CRIAR CONTA"
            android:textSize="16sp"
            android:textStyle="bold"></Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"></LinearLayout>
       </LinearLayout>


    </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_below="@+id/scrollEntrar">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="21dp"
                android:gravity="center"
                android:soundEffectsEnabled="true"
                android:text="Esqueceu a sua senha?"
                android:textColor="@color/roxo"
                android:textIsSelectable="true"
                android:textSize="16sp"></TextView>

        </LinearLayout>






</RelativeLayout>