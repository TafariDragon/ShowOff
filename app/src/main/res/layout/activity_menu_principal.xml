<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MenuPrincipal">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="142dp"
        android:layout_height="158dp"
        android:src="@drawable/cortedecabelo"
        android:layout_centerHorizontal="true"></ImageView>

    <ImageView
        android:id="@+id/iconBack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/Logo"
        android:layout_alignBottom="@+id/Logo"
        android:layout_marginLeft="-132dp"
        android:layout_marginBottom="49dp"
        android:clickable="true"
        android:src="@drawable/baseline_arrow_back_24"></ImageView>

    <TextView
        android:id="@+id/lblCrieSuaConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="73dp"
        android:fontFamily="@font/poppinsbold"
        android:text="FAÇA A SUA ESCOLHA"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCrieSuaConta"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Primeiro botão -->
        <RelativeLayout
            android:layout_width="314dp"
            android:layout_height="155dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_click_effect"
            android:backgroundTint="@color/azul"
            android:clickable="true">

            <TextView
                android:id="@+id/lblBarbeiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BARBEIRO"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/lblBarbeiro"
                android:src="@drawable/barbeiro" />

        </RelativeLayout>

        <!-- Segundo botão -->
        <RelativeLayout
            android:id="@+id/btnCabeleleira"
            android:layout_width="314dp"
            android:layout_height="155dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_click_effect"
            android:backgroundTint="@color/azul"
            android:clickable="true">

            <TextView
                android:id="@+id/lblCabeleleira"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CABELELEIRA"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsbold"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/lblCabeleleira"
                android:src="@drawable/mulhercomcabelocomprido" />

        </RelativeLayout>

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW-OFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsbold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"></TextView>


</RelativeLayout>