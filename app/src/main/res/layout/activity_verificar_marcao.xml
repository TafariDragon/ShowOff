<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".VerificarMarcao">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="142dp"
        android:layout_height="158dp"
        android:src="@drawable/cortedecabelo"
        android:layout_centerHorizontal="true"></ImageView>

    <ImageView
        android:id="@+id/iconBack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/Logo"
        android:layout_alignBottom="@+id/Logo"
        android:layout_marginLeft="-132dp"
        android:layout_marginBottom="49dp"
        android:clickable="true"
        android:src="@drawable/baseline_arrow_back_24"></ImageView>

    <TextView
        android:id="@+id/lblMarcação"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="124dp"
        android:fontFamily="@font/poppinsbold"
        android:text="MARCAÇÃO"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"></TextView>


    <LinearLayout
        android:id="@+id/etiquetaFase"
        android:layout_width="363dp"
        android:layout_height="53dp"
        android:background="@color/roxo"
        android:gravity="center"
        android:layout_below="@+id/lblMarcação"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="MARCACÕES AGENDADS"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp">
        </TextView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_below="@+id/etiquetaFase"
        android:background="@drawable/bordascortesbtn"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/textoDadosMarcacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:textSize="25sp"
            android:layout_gravity="center"></TextView>


    </LinearLayout>


</RelativeLayout>