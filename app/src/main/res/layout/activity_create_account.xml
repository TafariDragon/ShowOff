<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CreateAccount">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="142dp"
        android:layout_height="158dp"
        android:src="@drawable/cortedecabelo"
        android:layout_centerHorizontal="true"></ImageView>

    <ImageView
        android:id="@+id/iconBack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:layout_alignLeft="@+id/Logo"
        android:layout_alignBottom="@+id/Logo"
        android:layout_marginLeft="-142dp"
        android:layout_marginBottom="48dp"
        android:src="@drawable/baseline_arrow_back_24"></ImageView>

    <TextView
        android:id="@+id/lblCrieSuaConta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="92dp"
        android:fontFamily="@font/poppinsbold"
        android:text="CRIE A SUA CONTA"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"></TextView>

    
    <ScrollView
        android:id="@+id/scrollLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblCrieSuaConta">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/lblCrieSuaConta">




        <EditText
            android:id="@+id/txtNome"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Nome"
            android:fontFamily="@font/poppinslight"
            android:layout_marginTop="21dp"
            ></EditText>

        <EditText
            android:id="@+id/txtApelido"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Apelido"
            android:fontFamily="@font/poppinslight"
            android:layout_marginTop="21dp"></EditText>

        <EditText
            android:id="@+id/txtContacto"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Contacto"
            android:inputType="phone"
            android:fontFamily="@font/poppinslight"
            android:layout_marginTop="21dp"></EditText>

         
        <EditText
            android:id="@+id/txtCriarSenha"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Crie uma senha"
            android:fontFamily="@font/poppinslight"
            android:layout_marginTop="21dp"
            android:inputType="textPassword"></EditText>

        <EditText
            android:id="@+id/txtConfirmarSenha"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Confirme a senha"
            android:fontFamily="@font/poppinslight"
            android:layout_marginTop="21dp"
            android:inputType="textPassword"></EditText>



        <Button
            android:id="@+id/btnCadastrar"
            android:layout_width="201dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/verde"
            android:layout_marginTop="15dp"
            android:text="CRIAR CONTA"
            android:textSize="16sp"
            android:textStyle="bold"
            ></Button>


    </LinearLayout>
    </ScrollView>



   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_below="@+id/scrollLogin">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW-OFF"
        android:textSize="16sp"
        android:fontFamily="@font/poppinsbold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"></TextView>

</RelativeLayout>



</RelativeLayout>