<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ActivitysMarcacao.Cortes">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="142dp"
        android:layout_height="158dp"
        android:src="@drawable/cortedecabelo"
        android:layout_centerHorizontal="true"></ImageView>

    <ImageView
        android:id="@+id/iconBack"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/Logo"
        android:layout_alignBottom="@+id/Logo"
        android:layout_marginLeft="-132dp"
        android:layout_marginBottom="49dp"
        android:clickable="true"
        android:src="@drawable/baseline_arrow_back_24"></ImageView>

    <LinearLayout
        android:id="@+id/etiquetaFase"
        android:layout_width="363dp"
        android:layout_height="53dp"
        android:background="@color/roxo"
        android:gravity="center"
        android:layout_below="@+id/Logo"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsbold"
            android:text="Cortes"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp">

        </TextView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/detalhesCorte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etiquetaFase"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Corte"
            android:textColor="@color/azul"
            android:textSize="20sp"
            android:fontFamily="@font/poppinsbold"
            android:layout_alignParentStart="true">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo"
            android:textColor="@color/roxo"
            android:textSize="20sp"
            android:fontFamily="@font/poppinsbold"
            android:layout_centerInParent="true">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Custo"
            android:textColor="@color/vermelho"
            android:textSize="20sp"
            android:fontFamily="@font/poppinsbold"
            android:layout_alignParentEnd="true">
        </TextView>


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/detalhesCorte">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/btnPunk"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bordascortesbtn"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Punk Normal"
                android:textColor="@color/azul"
                android:fontFamily="@font/poppinsbold"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="10dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15min"
                android:textColor="@color/roxo"
                android:fontFamily="@font/poppinsbold"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"
                android:layout_centerHorizontal="true">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50.0mt"
                android:textColor="@color/vermelho"
                android:fontFamily="@font/poppinsbold"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp">
            </TextView>

        </RelativeLayout>
        <!--=======================Fim Punk==========================-->

        <RelativeLayout
            android:id="@+id/btnPunkFino"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/bordascortesbtn"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Punk Fino"
                android:textColor="@color/azul"
                android:fontFamily="@font/poppinsbold"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="10dp">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20min"
                android:textColor="@color/roxo"
                android:fontFamily="@font/poppinsbold"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"
                android:layout_centerHorizontal="true">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.0mt"
                android:textColor="@color/vermelho"
                android:fontFamily="@font/poppinsbold"
                android:textSize="20sp"
                android:layout_marginVertical="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp">
            </TextView>

        </RelativeLayout>

            <!--=======================Fim Punk Fino ==========================-->

            <RelativeLayout
                android:id="@+id/btnJuba"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bordascortesbtn"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Juba"
                    android:textColor="@color/azul"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginLeft="10dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10min"
                    android:textColor="@color/roxo"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:layout_marginVertical="20dp"
                    android:layout_centerHorizontal="true">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.0mt"
                    android:textColor="@color/vermelho"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:layout_marginVertical="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp">
                </TextView>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/btnCrista"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bordascortesbtn"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crista"
                    android:textColor="@color/azul"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginLeft="10dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20min"
                    android:textColor="@color/roxo"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:layout_marginVertical="20dp"
                    android:layout_centerHorizontal="true">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.0mt"
                    android:textColor="@color/vermelho"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:layout_marginVertical="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp">
                </TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnMoicano"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/bordascortesbtn"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Moicano"
                    android:textColor="@color/azul"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:layout_marginVertical="20dp"
                    android:layout_marginLeft="10dp">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30min"
                    android:textColor="@color/roxo"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:layout_marginVertical="20dp"
                    android:layout_centerHorizontal="true">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250.0mt"
                    android:textColor="@color/vermelho"
                    android:fontFamily="@font/poppinsbold"
                    android:textSize="20sp"
                    android:layout_marginVertical="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp">
                </TextView>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>